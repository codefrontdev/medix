{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "entryFile": "main",
  "sourceRoot": "src",
  "outDir": "dist",
  "compilerOptions": {
    "webpack": true,
    "webpackPath": "webpack.config.js",
    "tsConfigPath": "tsconfig.build.json",
    "deleteOutDir": true,
    "assets": [
      "resources/email-templates/**/*"
    ],
    "watchAssets": true
  }
}